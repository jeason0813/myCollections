<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Menu-->
    <Style TargetType="{x:Type Menu}">
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="Height" Value="Auto"/>
        <Setter Property="FontSize" Value="{DynamicResource SmallTextSize}"/>
        <Setter Property="Background" Value="{DynamicResource ToolbarBackGroundColor}"/>
    </Style>

    <Style x:Key="ForeGroundMenuFirst" TargetType="{x:Type MenuItem}">
        <Setter Property="Foreground" Value="{DynamicResource MenuFirstLevelText}"/>
    </Style>
    
    <Style TargetType="{x:Type MenuItem}">
        <Setter Property="Foreground" Value="{DynamicResource MenuSecondLevelText}"/>
    </Style>

    <!--Context Menu-->
    <Style TargetType="{x:Type ContextMenu}">
        <Setter Property="Background" Value="{DynamicResource ToolbarBackGroundColor}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="HasDropShadow" Value="True"/>
    </Style>


</ResourceDictionary>
<Controls:BorderLessWindow x:Class="myCollections.Pages.VideoPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:Controls="clr-namespace:myCollections.Controls" Title="VideoPlayer" WindowStartupLocation="CenterScreen" 
        Height="Auto" Width="Auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <MediaElement Name="Player" LoadedBehavior="Play"></MediaElement>
    </Grid>
</Controls:BorderLessWindow>

<UserControl x:Class="myCollections.Controls.ucComboxBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="160"/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="Text" Grid.Column="0" Foreground="{DynamicResource TextColor}" HorizontalAlignment="Left" />
        <ListBox Name="List" Grid.Column="1" SelectionMode="Multiple" HorizontalAlignment="Right" VerticalAlignment="Center"  MinHeight="24" Width="160" />
    </Grid>
</UserControl>

        <myControls:UcToolBar Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" Height="Auto" x:Name="tblToolBar" Background="Transparent"/>

        <StackPanel Width="100" Height="Auto" Name="stcToggleButton" Background="Transparent" Grid.Column="0" Grid.Row="2" >
            <ToggleButton Margin="5,5,5,5" Width="Auto" Height="Auto" Content="{DynamicResource Apps}" Name="cmdApps" Click="cmdApps_Click"/>
            <ToggleButton Margin="5,5,5,5" Width="Auto" Height="Auto" Content="{DynamicResource Books}" Name="cmdBooks" Click="cmdBooks_Click" IsEnabled="True"/>
            <ToggleButton Margin="5,5,5,5" Width="Auto" Height="Auto" Content="{DynamicResource Gamez}"  Name="cmdGamez" Click="cmdGamez_Click" IsEnabled="True"/>
            <ToggleButton Margin="5,5,5,5" Width="Auto" Height="Auto" Content="{DynamicResource Movies}" Name="cmdMovies" Click="cmdMovies_Click" />
            <ToggleButton Margin="5,5,5,5" Width="Auto" Height="Auto" Content="{DynamicResource Music}" Name="cmdMusic" Click="cmdMusic_Click" />
            <ToggleButton Margin="5,5,5,5" Width="Auto" Height="Auto" Content="{DynamicResource NDS}" Name="cmdNds" Click="cmdNds_Click" />
            <ToggleButton Margin="5,5,5,5" Width="Auto" Height="Auto" Content="{DynamicResource Series}" Name="cmdSeries" Click="cmdSeries_Click" IsEnabled="True"/>
            <ToggleButton Margin="5,5,5,5" Width="Auto" Height="Auto" Content="{DynamicResource XXX}" Name="cmdXXX" Click="cmdXXX_Click" />
        </StackPanel>

        <myUC:UcFastBrowse x:Name="BrowseView" Grid.Column="1" Grid.Row="2" 
                           ItemHeight="{Binding ElementName=sldZoom, Path='Value',Converter={StaticResource imageHeightConverter}}"/>
        <myUC:UcCoverFlow x:Name="CoverFlowView" Grid.Column="1" Grid.Row="2" Visibility="Collapsed" ClipToBounds="True"/>
        <myUC:ucArtistView x:Name="ArtistView" Grid.Column="1" Grid.Row="2" Visibility="Collapsed" ClipToBounds="True"/>


        <Canvas Name="cnvNavPanel" Width="260" Grid.Column="2" Grid.Row="2" Background="{DynamicResource ToolbarBackGroundColor}"
                MouseEnter="cnvNavPanel_MouseEnter" MouseLeave="cnvNavPanel_MouseLeave">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                    <SkewTransform AngleX="0" AngleY="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform X="0" Y="0"/>
                </TransformGroup>
            </Canvas.RenderTransform>
            <Button Click="pinButton_Click" Name="pinButton" Style="{DynamicResource TransparentButton}" Margin="20,20,0,5">
                <Button.Content>
                    <Image Height="25" Width="25" Source="pack://application:,,,/myCollections;component/Images/PushPin.png"/>
                </Button.Content>
                <Button.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="180"/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <Button Click="lockButton_Click" Name="lockButton" 
                    Style="{DynamicResource TransparentButton}" Canvas.Left="-3" Canvas.Top="24">
                <Button.Content>
                    <Image Height="25" Width="25" Name="lockImage" Source="pack://application:,,,/myCollections;component/Images/lock-unlock.png" />
                </Button.Content>
            </Button>
            <!-- Nav button Text -->
            <TextBlock Name="ItemDetail" Canvas.Top="55" FontSize="15" FontWeight="Bold" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"
                               Text="{DynamicResource DetailsPane}" Style="{DynamicResource DetailPanelTextBlock}">
                <TextBlock.LayoutTransform>
                    <TransformGroup>
                        <RotateTransform Angle="90"/>
                    </TransformGroup>
                </TextBlock.LayoutTransform>
            </TextBlock>

            <Border Canvas.Top="5" Canvas.Left="15" BorderThickness="1" x:Name="DetailsForm" Padding="7" Background="Transparent"/>

        </Canvas>

        <StackPanel Orientation="Horizontal" Name="BottomStack" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="3" >
            <TextBlock Width="Auto" Name="lblStatutBar" VerticalAlignment="Center" Margin="5,0,0,0"/>
            <TextBlock Text="Zoom :" VerticalAlignment="Center" Margin="80,0,0,0" Name="lblZoom"/>
            <Slider x:Name="sldZoom" Margin="10,0,0,0" Orientation="Horizontal" 
                    Minimum="10" Maximum="400" Width="300" Thumb.DragCompleted="sldZoom_DragCompleted"
                    TickFrequency="50" TickPlacement="BottomRight" SmallChange="10" LargeChange="50" >
            </Slider>
            <ProgressBar Height="25" HorizontalAlignment="Left" Margin="60,0,0,0" Name="DownloadProgress" Style="{DynamicResource MyProgressBarStyle}"
                         VerticalAlignment="Top" Width="400" Maximum="100" Visibility="Collapsed" FontSize="12" FontStyle="Italic" />
            <Button Name="cmdCancel" Height="25" Margin="9,0,0,0" Click="cmdCancel_Click" Style="{DynamicResource ButtonStyle}" 
                    Visibility="Collapsed">
                <Button.Content>
                    <Image Source="/Images/Close.png" ToolTip="Stop Copy"/>
                </Button.Content>
            </Button>

        </StackPanel>
    </Grid>
</myControls:BorderLessWindow>

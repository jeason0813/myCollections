                <MenuItem Header="{DynamicResource French}" IsEnabled="True" CommandParameter=".\Language\French.xaml" Name="mniFrench" IsChecked="False" />
                <MenuItem Header="{DynamicResource Dutch}" IsEnabled="True" CommandParameter=".\Language\Dutch.xaml" Name="mniDutch" IsChecked="False" />
                <MenuItem Header="{DynamicResource Spanish}" IsEnabled="True" CommandParameter=".\Language\Spanish.xaml" Name="mniSpanish" IsChecked="False" />
                <MenuItem Header="{DynamicResource German}" IsEnabled="True" CommandParameter=".\Language\German.xaml" Name="mniGerman" IsChecked="False" />
                <MenuItem Header="{DynamicResource Portuguese}" IsEnabled="True" CommandParameter=".\Language\Portuguese.xaml" Name="mniPortuguese" IsChecked="False" />
                <MenuItem Header="{DynamicResource Russian}" IsEnabled="True" CommandParameter=".\Language\Russian.xaml" Name="mniRussian" IsChecked="False" />
                <MenuItem Header="{DynamicResource Ukranian}" IsEnabled="True" CommandParameter=".\Language\Ukranian.xaml" Name="mniUkraniane" IsChecked="False" />
                <MenuItem Header="{DynamicResource Turkish}" IsEnabled="True" CommandParameter=".\Language\Turkish.xaml" Name="mniTurkish" IsChecked="False" />
